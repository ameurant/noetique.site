<html metal:use-macro="here/main_template/macros/master"
        i18n:domain="noetique">

<metal:styleslot fill-slot="style_slot">
    <style>
        body.template-home_view #portal-breadcrumbs {
            display: none;
        }
        #home-boxes {
        }
        #home-boxes .box {

        }

        #home-boxes .box > header {
            font-size: 1.5rem;
            font-weight: bold;
            padding: 1.5rem 2rem 0.5rem;
            background-color: #777;
            color: #FFF;

        }

        #home-boxes .box > section {

        }

        #home-boxes .box > footer {
            background-color: #AAA;
            padding: 0.5rem 2rem;
            text-align: right;
            clear:both;
        }

        #home-boxes #box-books > section {
        }
        #home-boxes #box-books img {
            width: 35%;
            float: right;
            margin: 0px 0px 0px 1rem
        }
        #home-boxes #box-news img {
            display: block;
            width: 100%;
        }
        @media (max-width: 480px) {
        }
        @media (min-width: 481px) {
            #home-boxes .box {
                width: 45%;
                margin: 0px 10px 10px 0px;
            }
            #box-news {
                float: right;
            }
        }
    </style>
</metal:styleslot>
<metal:main fill-slot="main">
    <div class="hero">
        La pluie ne mouille pas les poissons.
    </div>
    <div id="home-boxes">
        <section id="box-news" class="box" tal:define="news view/last_news" tal:condition="news">
            <header>
                A la une
            </header>
            <section>
                <a href="${news/url}">
                    <h4>${news/title}</h4>
                    <img tal:attributes="src string:${news/url}/@@images/image/mini" />
                    <p>
                       ${news/description}
                    </p>
                </a>
            </section>
            <footer>
                <a href="livres">Tous les livres</a>
            </footer>
        </section>
        <section id="box-video" class="box" tal:define="video view/last_video" tal:condition="video">
            <header>
                Dernière vidéo
            </header>
            <section>
                <iframe width="100%" height="240px" frameborder="0" allowfullscreen
                        tal:attributes="src string:https://www.youtube.com/embed/${video/video_id}" ></iframe>
            </section>
            <footer>
                <a href="livres">Toutes les vidéos</a>
            </footer>
        </section>
        <section id="box-books" class="box" tal:define="books view/last_books">
            <header>
                En librairie
            </header>
            <section tal:repeat="book books">
                <a href="${book/url}">
                    <img tal:attributes="src string:${book/url}/@@images/cover/mini" />
                    <h5>${book/title}</h5>

                    <div>
                        <strong>Auteur</strong> : ${book/author}<br/>
                        <strong>Editeur</strong> : ${book/publisher}<br/>
                        <strong>Année</strong> : ${book/year}
                    </div>
                </a>
            </section>
            <footer>
                <a href="livres">Tous les livres</a>
            </footer>
        </section>
    </div>
</metal:main>

</html>